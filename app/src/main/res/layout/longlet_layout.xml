<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:background="@color/EditTextColor"

        android:orientation="horizontal">

        <ImageView android:id="@+id/mylocation"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@drawable/ic_my_location_black_24dp" />

        <View android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#d26642" />

        <ImageView android:id="@+id/map"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="10dp"
            android:src="@drawable/ic_touch_app_black_24dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#d26642" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="postcode"
            android:padding="10dp"
            android:textColor="@color/colorAppTheme"
            android:textSize="20dp"

            />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@color/EditTextColor"
            android:orientation="vertical">

            <TextView android:id="@+id/bedroom"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="#FFF"
                android:padding="15dp"
                android:gravity="center"
                android:text="BEDROOMS"
                android:textSize="18sp" />

            <TextView android:id="@+id/price"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="#FFF"
                android:gravity="center"
                android:padding="15dp"
                android:text="LETTING PRICE RANGE"
                android:textSize="18sp" />

            <TextView android:id="@+id/propertytype"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:background="#FFF"
                android:gravity="center"
                android:padding="15dp"
                android:textSize="18sp"
                android:text="PROPERTY TYPE" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                android:weightSum="3">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:padding="10dp"
                    android:text="Include recently let"

                    android:textSize="22sp" />

                <Switch
                    android:id="@+id/switch1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/findproperties"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:height="50dp"
                android:background="@drawable/btn_selector"
                android:padding="10dp"
                android:text="Find Properties"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/resetfilter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:height="50dp"
                android:padding="10dp"
                android:text="Reset Filters"
                android:textSize="22dp" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>


