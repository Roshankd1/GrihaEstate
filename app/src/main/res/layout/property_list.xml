<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="100dp"
        android:padding="5dp"
>

        <ImageView android:id="@+id/save"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/icons"
            android:src="@drawable/ic_save_black_24dp" />

        <ImageView android:id="@+id/share"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/icons"
            android:src="@drawable/ic_share_black_24dp" />

        <ImageView android:id="@+id/map"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/icons"
            android:src="@drawable/ic_map_black_24dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAppTheme" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Properties for rent"
        android:textSize="15sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="1000 properties. Showing 1-100"
        android:textColor="@color/colorAppTheme"
        android:textSize="15sp" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageView android:id="@+id/house1"
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:src="@mipmap/house1" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:text="Residential 2.5 storey house with 9 rooms including the kitchen and living rooms, car parking ,beautiful modern design of exterior and interior and 16 ft road on front and available of good water." />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:src="@mipmap/house3" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:text="Residential of 3.5 storey Bunglow with 14room including living room,kitchen,master room with beautiful design exterior and interior design,car parking and garden ,16ft road on front and 12ft on side as well,avaibilty of good water." />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="200dp"
                    android:layout_height="150dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/house2" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:text="-Residential 3.5 storey house with spacious rooms ,located in Residential area.
-Beautiful mordern design exterior &amp; interior.
– Good Avaibilty of water,
– 13 FT road on front." />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
