<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">


        <ImageView
            android:id="@+id/save"
            android:background="@drawable/icons"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:src="@drawable/ic_save_black_24dp" />

        <ImageView
            android:id="@+id/favourite"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/icons"
            android:src="@drawable/ic_star_border_black_24dp" />

        <ImageView
            android:id="@+id/share"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/icons"
            android:src="@drawable/ic_share_black_24dp" />

        <ImageView
            android:id="@+id/call"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/icons"
            android:src="@drawable/ic_call_black_24dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAppTheme" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        >

        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="250dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@mipmap/house1" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/house1" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="280dp"
                android:scaleType="fitXY"
                android:src="@mipmap/house1" />
        </LinearLayout>
    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="Residential 2.5 storey house"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"

            android:text="9 rooms including the kitchen and living rooms, car parking"
            android:textSize="15sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:text="Nrs 2,00,00,000"
            android:textColor="@color/colorAppTheme"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">


        <ImageView
            android:id="@+id/info"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/icons"
            android:src="@drawable/ic_info_outline_black_24dp" />

        <ImageView
            android:id="@+id/gallery"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="@drawable/icons"
            android:layout_weight="1"
            android:src="@drawable/ic_image_black_24dp" />

        <ImageView
            android:id="@+id/property"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="@drawable/icons"
            android:layout_weight="1"
            android:src="@drawable/ic_business_black_24dp" />

        <ImageView
            android:id="@+id/location"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="@drawable/icons"
            android:layout_weight="1"
            android:src="@drawable/ic_location_on_black_24dp" />


    </LinearLayout>
</LinearLayout>